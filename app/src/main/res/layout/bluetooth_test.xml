<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/testTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bluetooth Test"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If no connection is available,\ntest data will be sent to\nthe debug menu,\n\nChoose 'load test data' to load\n'test.csv' into Tracking Page"
        android:layout_marginTop="130dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:minWidth="200dp"
        android:textColor="#000" />

    <Button
        android:id="@+id/openBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="380dp"
        android:text="Open"
        android:textSize="26dp" />

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="460dp"
        android:text="Close"
        android:textSize="26dp" />

    <Button
        android:id="@+id/loadTestBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="540dp"
        android:text="Load Test Data"
        android:textSize="26dp" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="620dp"
        android:text="Back"
        android:textSize="26dp" />

</FrameLayout>